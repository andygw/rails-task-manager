<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %> •
      <%= link_to "🗑️",
        task_path(task),
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure you want to delete the '#{task.title}' task?"
        }
      %>
  </li>
  <% end %>
</ul>

<hr>

<i class="fa-solid fa-plus"></i> <%= link_to "Add new task", new_task_path %>
