<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_area :details, size: "50x5" %>
  <% if @task.new_record? %>
  <% else %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <% end %>
  <br/>
  <%= f.submit %>
<% end %>
